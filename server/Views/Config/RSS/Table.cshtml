@using InfoScreenPi.Entities
@model List<RssFeed>
<table class="table table-striped table-hover">
        <tr>
            <th style="display:none;">Id</th>
            <th width="10px"></th>
            <th>RSS Feed</th> 
            <th width="200px"><center>Standaard Achtergrond</center></th>
            <th width="50px">Actief</th>
            <th width="5px"></th>
        </tr>
        @{
            int index = 1;
            foreach(RssFeed i in Model)
            {
                <tr>
                    <td style="display:none;">@i.Id</td>
                    <td>@index</td>
                    <td><b>@i.Title </b><br /> @i.Description</td>
                    <td>
                        @{
                            string url = "";
                            string urlOri = "";
                            if(i.StandardBackground.Url.StartsWith("http://"))
                            {
                                url = i.StandardBackground.Url;
                                urlOri = i.StandardBackground.Url;
                            }
                            else
                            {
                                url = "images/backgrounds/thumbnails/" + i.StandardBackground.Url;
                                urlOri = "images/backgrounds/" + i.StandardBackground.Url;
                            }
                        }
                        <center><a href="@urlOri" target="new" ><img src="@url" width="100px" /></a></center>
                    </td>
                    <td>
                        @if(i.Active){
                            <input type="checkbox" class="stateCheckRss" checked data-toggle="toggle" data-style="ios" data-size="mini" data-on="Actief" data-off="Inactief"data-onstyle="success" data-offstyle="danger">
                        }
                        else
                        {
                            <input type="checkbox" class="stateCheckRss" data-toggle="toggle" data-style="ios" data-size="mini" data-on="Actief" data-off="Inactief"data-onstyle="success" data-offstyle="danger">
                        }
                    </td>
                    <td><span class="glyphicon glyphicon glyphicon-trash verwijderRss spanLink" aria-hidden="true"></span></td>
                </tr>
                index++;
            }
        }
    </table>